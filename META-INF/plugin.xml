<idea-plugin>
	<id>InetlliJEval</id>
	<name>InetlliJEval</name>
	<version>0.0</version>
	<vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
	<idea-version since-build="8000"/>
	<description>
		<![CDATA[<html><body>
				TODO
				</body></html>
		]]>
	</description>
	<change-notes>
		<![CDATA[<html><body>
        <ul>
            <li>0.0 - TODO</li>
        </ul>
        </body></html>
        ]]>
	</change-notes>

	<depends>com.intellij.modules.platform</depends>

	<application-components>
		<component>
			<implementation-class>ru.intellijeval.EvalComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<action id="InetlliJEval.EvalCode" class="ru.intellijeval.EvaluatePluginAction" text="Run current plugin">
			<keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt e"/>
		</action>

        <group id="InetlliJEval.Popup">
            <action id="InetlliJEval.NewFileAction" class="ru.intellijeval.toolwindow.NewFileAction"
                    text="New Groovy script" icon="/ru/intellijeval/toolwindow/groovy_fileType.png"/>
            <action id="InetlliJEval.NewDirectoryAction" class="fork.com.intellij.openapi.fileChooser.actions.NewFolderAction"
                    text="New Directory" icon="AllIcons.Nodes.Folder"/>
            <separator/>
            <action id="InetlliJEval.FileDeleteAction" class="fork.com.intellij.openapi.fileChooser.actions.FileDeleteAction"
                    text="Delete" use-shortcut-of="$Delete"/>
        </group>

        <group id="IntellijEval_FileChooserToolbar">
            <action id="IntellijEval_FileChooser.GotoHome" class="fork.com.intellij.openapi.fileChooser.actions.GotoHomeAction" icon="AllIcons.Nodes.HomeFolder"/>
            <action id="IntellijEval_FileChooser.GotoProject" class="fork.com.intellij.openapi.fileChooser.actions.GotoProjectDirectory" icon="AllIcons.Nodes.IdeaProject"/>
            <separator/>
            <action id="IntellijEval_FileChooser.NewFile" class="fork.com.intellij.openapi.fileChooser.actions.NewFileAction" icon="AllIcons.Actions.New"/>
            <action id="IntellijEval_FileChooser.NewFolder" class="fork.com.intellij.openapi.fileChooser.actions.NewFolderAction" icon="AllIcons.Actions.NewFolder"/>
            <action id="IntellijEval_FileChooser.Delete" class="fork.com.intellij.openapi.fileChooser.actions.FileDeleteAction" icon="AllIcons.Actions.Delete"/>
            <separator/>
            <action id="IntellijEval_FileChooser.Refresh" class="fork.com.intellij.openapi.fileChooser.actions.RefreshFileChooserAction" icon="AllIcons.Actions.Sync"/>
            <separator/>
            <action id="IntellijEval_FileChooser.ShowHiddens" class="fork.com.intellij.openapi.fileChooser.actions.ShowHiddensAction" icon="AllIcons.Actions.ShowHiddens"/>
        </group>

    </actions>

</idea-plugin>