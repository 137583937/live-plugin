<idea-plugin>
	<id>InetlliJEval</id>
	<name>InetlliJEval</name>
	<version>0.1</version>
	<vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
	<idea-version since-build="111.0"/>
    <category></category> <!--TODO-->
	<description>
		<![CDATA[<html><body>
Plugin for writing simple plugins in Groovy (or running Groovy code inside IntelliJ).
<br/><br/>
How to use:
<ul>
<li>open "Plugins" tool window on the right side</li>
<li>edit one of "plugin.groovy" files (these are entry points for plugins)</li>
<li>use "ctrl + C, ctrl + E" to execute current plugin</li>
</ul>
Plugins are stored on application level.
</body></html>
		]]>
	</description>

	<!--<depends>com.intellij.modules.platform</depends>-->

	<application-components>
		<component>
			<implementation-class>ru.intellijeval.EvalComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<action id="InetlliJEval.EvalPlugin" class="ru.intellijeval.EvaluatePluginAction" text="Run current plugin">
			<keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt e"/>
		</action>
		<action id="InetlliJEval.EvalAllPlugins" class="ru.intellijeval.EvaluateAllPluginsAction" text="Run all plugins"/>

        <group id="InetlliJEval.Popup">
            <action id="InetlliJEval.NewFileAction" class="ru.intellijeval.toolwindow.NewFileAction"
                    text="New Groovy script" icon="/ru/intellijeval/toolwindow/groovy_fileType.png"/>
            <action id="InetlliJEval.NewDirectoryAction" class="fork.com.intellij.openapi.fileChooser.actions.NewFolderAction"
                    text="New Directory" icon="/nodes/folder.png"/>
            <separator/>
            <action id="InetlliJEval.FileDeleteAction" class="fork.com.intellij.openapi.fileChooser.actions.FileDeleteAction"
                    text="Delete" use-shortcut-of="$Delete"/>
        </group>

        <group id="IntellijEval_FileChooserToolbar">
            <action id="IntellijEval_FileChooser.GotoHome" class="fork.com.intellij.openapi.fileChooser.actions.GotoHomeAction" icon="/nodes/homeFolder.png" text="Home"/>
            <action id="IntellijEval_FileChooser.GotoProject" class="fork.com.intellij.openapi.fileChooser.actions.GotoProjectDirectory" icon="/nodes/ideaProject.png" text="Project"/>
            <separator/>
            <action id="IntellijEval_FileChooser.NewFile" class="fork.com.intellij.openapi.fileChooser.actions.NewFileAction" icon="/actions/new.png" text="New file"/>
            <action id="IntellijEval_FileChooser.NewFolder" class="fork.com.intellij.openapi.fileChooser.actions.NewFolderAction" icon="/actions/newFolder.png" text="New folder"/>
            <action id="IntellijEval_FileChooser.Delete" class="fork.com.intellij.openapi.fileChooser.actions.FileDeleteAction" icon="/actions/delete.png" text="Delete"/>
            <separator/>
            <action id="IntellijEval_FileChooser.Refresh" class="fork.com.intellij.openapi.fileChooser.actions.RefreshFileChooserAction" icon="/actions/sync.png" text="Refresh"/>
            <separator/>
            <action id="IntellijEval_FileChooser.ShowHiddens" class="fork.com.intellij.openapi.fileChooser.actions.ShowHiddensAction" icon="/actions/showHiddens.png" text="Show hidden"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="ru.intellijeval.Settings" serviceImplementation="ru.intellijeval.Settings"/>
    </extensions>

</idea-plugin>