<idea-plugin>
	<id>InetlliJEval</id>
	<name>InetlliJEval</name>
	<version>0.0</version>
	<vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
	<idea-version since-build="8000"/>
	<description>
		<![CDATA[<html><body>
				TODO
				</body></html>
		]]>
	</description>
	<change-notes>
		<![CDATA[<html><body>
        <ul>
            <li>0.0 - TODO</li>
        </ul>
        </body></html>
        ]]>
	</change-notes>

	<depends>com.intellij.modules.platform</depends>

	<application-components>
		<component>
			<implementation-class>ru.intellijeval.EvalComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<action id="InetlliJEval.EvalCode" class="ru.intellijeval.EvaluateAction" text="Evaluate in IntelliJ"
		        description="Reload dynamic plugins" icon="/fileTypes/text.png">
			<keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt e"/>
			<add-to-group group-id="ToolsMenu" anchor="last"/>
		</action>
        <group id="InetlliJEval.Popup">
            <action id="InetlliJEval.NewFileAction" class="ru.intellijeval.toolwindow.NewFileAction"
                    text="New File" icon="AllIcons.FileTypes.Text"/>
            <action id="InetlliJEval.NewDirectoryAction" class="com.intellij.openapi.fileChooser.actions.NewFolderAction"
                    text="New Directory" icon="AllIcons.Nodes.Folder"/>
            <separator/>
            <action id="InetlliJEval.FileDeleteAction" class="com.intellij.openapi.fileChooser.actions.FileDeleteAction"
                    text="Delete"/>
        </group>
    </actions>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceInterface="ru.intellijeval.EvalData"
		                    serviceImplementation="ru.intellijeval.EvalData"/>
	</extensions>
</idea-plugin>