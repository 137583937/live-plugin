<idea-plugin>
	<id>InetlliJEval</id>
	<name>InetlliJEval</name>
	<version>0.121 beta</version>
	<vendor email="dmitry.kandalov [at] gmail.com">Dmitry Kandalov</vendor>
	<idea-version since-build="122.600"/>
    <category>Plugin Development</category>
	<description>
		<![CDATA[<html><body>
Plugin for writing simple plugins in Groovy (or running Groovy code inside IntelliJ).
<br/><br/>
How to use:
<ul>
<li>open "Plugins" tool window on the right side</li>
<li>edit one of "plugin.groovy" files (these are entry points for plugins)</li>
<li>use "ctrl + C, ctrl + E" to execute current plugin</li>
</ul>
Plugins are stored on application level.
<br/><br/>
(For more details please see https://github.com/dkandalov/intellij_eval)
</body></html>
		]]>
	</description>

	<!--<depends>com.intellij.modules.platform</depends>-->
    <depends optional="true" config-file="github-integration.xml">org.jetbrains.plugins.github</depends>

	<application-components>
		<component>
			<implementation-class>intellijeval.EvalComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<action id="InetlliJEval.EvalPlugin" class="intellijeval.EvaluatePluginAction" text="Run Current Plugin">
			<keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt e"/>
		</action>

        <group id="InetlliJEval.Popup.MainActions">
            <action id="InetlliJEval.NewFileAction" class="intellijeval.toolwindow.NewFileAction"
                    text="New Groovy Script" icon="/ru/intellijeval/toolwindow/groovy_fileType.png"/>
            <action id="InetlliJEval.NewDirectoryAction" class="com.intellij.openapi.fileChooser.actions.NewFolderAction"
                    text="New Directory" icon="/nodes/folder.png"/>
            <action id="InetlliJEval.RenameFileAction" class="intellijeval.toolwindow.RenameFileAction" text="Rename"
                    use-shortcut-of="RenameElement"/>
        </group>
        <group id="InetlliJEval.Popup">
            <reference id="InetlliJEval.Popup.MainActions"/>
            <separator/>
            <action id="InetlliJEval.FileDeleteAction" class="com.intellij.openapi.fileChooser.actions.FileDeleteAction"
                    text="Delete" use-shortcut-of="$Delete"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="intellijeval.Settings" serviceImplementation="intellijeval.Settings"/>
    </extensions>

</idea-plugin>